{% extends "base.twig" %}

{% block content %}
  <div id="{{post.ID}}" class="section-header">
    <div class="container">
      <h1 class="header-title">{{post.title}}</h1>
    </div>
  </div>
  <article class="container content-section post-type-{{post.post_type}}" id="post-{{post.ID}}">
    {{post.content}}
  {% for single in posts %}
    {% if loop.index % 3 == 1 %}
    <div class="row">
    {% endif %}
    {% include 'tease.twig' %}
    {% if (loop.index % 3 == 0 or loop.last) %}
    </div>
    {% endif %}
  {% endfor %}
  </article>
  {% include "page-footer.twig" %}
  {% include 'footer.twig' %}
{% endblock %}
