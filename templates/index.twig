{% extends "base.twig" %}

{% block content %}
  <section id="{{post.slug}}" class="sct-slideshow sct-parallax main-header" data-time="5">
    <div class="images-container">
      {% for image in slider_images %}
        <div class="slider-img" style="background-image: url({{TimberImage(image).src}})"></div>
      {% endfor %}
    </div>
    <nav class="header-menu">
      <img src="{{theme.link}}/images/logo-200x200.png" alt="Logo Iyengar" class="logo" />
      {% include "menu.twig" with {'menu': menu.get_items} %}
    </nav>
  </section>
  <div id="centro" class="section-header no-margin">
    <div class="container">
      <h1 class="header-title">{{post.title}}</h1>
    </div>
  </div>
  <img class="mobile-hidden" src="{{theme.link}}/images/barra-iyengar.jpg" />
  <article class="container content-section post-type-{{post.post_type}}" id="post-{{post.ID}}">
    <section class="row content-section">
      <div class="three columns">
        <img class="align-center photo" src="{{theme.link}}/images/faeqji-pe-e-cami.jpg" alt="Faeqji, Pedro e Cami">
      </div>
      <div class="nine columns text-highlight">
        {{post.content}}
        <img class="mobile-hidden" src="{{theme.link}}/images/pedro-cami-praticando.jpg" alt="Pedro e Cami praticando">
      </div>
    </section>
  </article>
  {% include "page-footer.twig" %}
  <div id="atividades" class="section-header">
    <div class="container">
      <h1 class="header-title">Atividades</h1>
    </div>
  </div>
  <div class="container content-section">
    {% for single in posts %}
      {% if loop.index % 3 == 1 %}
      <div class="row">
      {% endif %}
      {% include 'tease.twig' %}
      {% if (loop.index % 3 == 0 or loop.last) %}
      </div>
      {% endif %}
    {% endfor %}
  </div>
  {% if post.get_field('bottom_image') %}
    <section class="sct-parallax" style="background-image: url({{TimberImage(post.get_field('bottom_image')).src}})">
      {% if post.get_field('bottom_content') %}
        <div class="container">
          <h3>{{post.get_field('bottom_content')}}</h3>
        </div>
      {% endif %}
    </section>
  {% endif %}
  {% for section in sections %}
    {% include "page-no-footer.twig" with {'post': section} %}
  {% endfor %}
  {% include 'footer.twig' %}
{% endblock %}
